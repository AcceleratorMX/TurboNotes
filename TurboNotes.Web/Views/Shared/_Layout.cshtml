<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Turbo Notes</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body class="d-flex flex-column min-vh-100">
<header class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Turbo Notes</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Categories" asp-action="Categories">Categories</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown">
                        <i class="bi bi-bell"></i>
                        <span id="notificationCount" class="badge">0</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-start" aria-labelledby="notificationDropdown">
                        <li><span class="dropdown-header">Notifications</span></li>
                        <li>
                            <ul id="notificationsList" class="list-unstyled px-3"></ul>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</header>
<div class="container-fluid mt-4">
    <div class="row">
        <aside class="col-md-1">
            @await Component.InvokeAsync("NavigationMenu")
        </aside>

        <main class="col-md-11">
            @RenderBody()
        </main>
    </div>
</div>

<footer class="bg-dark text-white py-1 mt-auto">
    <div class="container-fluid">
        <p class="mb-0 p-0">&copy; 2025 Turbo Notes. Karpinskyi Oleksandr WT-23-2.</p>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>