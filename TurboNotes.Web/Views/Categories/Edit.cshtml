@model CategoryViewModel

@{
    ViewData["Title"] = "Edit Category";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-5">
        <hr />
        <form asp-controller="Categories" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.Id"/>
            <div class="d-flex">
                <div class="form-group w-75">
                    <label asp-for="Category.Name" class="control-label" hidden="hidden"></label>
                    <input asp-for="Category.Name" class="form-control"/>
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                </div>
                <div class="form-group ms-4">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-controller="Categories" asp-action="Categories" class="btn btn-secondary">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>