@model NoteViewModel

@{
    ViewData["Title"] = "New Note";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <hr />
        <form asp-controller="Notes" asp-action="Create" method="post">
            <div class="form-group mb-4">
                <label asp-for="Note.Title"></label>
                <input asp-for="Note.Title" class="form-control"/>
                <span asp-validation-for="Note.Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Note.Content"></label>
                <textarea asp-for="Note.Content" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Note.Content" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Note.Deadline"></label>
                <input asp-for="Note.Deadline" class="form-control" type="datetime-local"/>
                <span asp-validation-for="Note.Deadline" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Note.CategoryId"></label>
                <select asp-for="Note.CategoryId" class="form-select" asp-items="ViewBag.Categories"></select>
                <span asp-validation-for="Note.CategoryId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-primary">Create</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </form>
    </div>
</div>
